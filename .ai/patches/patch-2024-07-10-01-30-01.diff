     private static string IndentMultiline(string text, string prefix)
     {
         var lines = (text ?? "").Replace("\r", "").Split('\n');
         var sb = new StringBuilder();
         foreach (var line in lines)
             sb.AppendLine(prefix + line);
         return sb.ToString().TrimEnd();
     }
