{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://builder-rah.local/schemas/tool-schema.v1.json",
  "title": "Tool",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "description",
    "categories",
    "os",
    "install",
    "tags"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "categories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "os": {
      "type": "string",
      "enum": [
        "linux",
        "windows",
        "both"
      ]
    },
    "install": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "method",
        "command"
      ],
      "properties": {
        "method": {
          "type": "string",
          "minLength": 1
        },
        "command": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string"
        },
        "sourceUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
